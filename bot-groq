class TravelBot:
    def __init__(self):
        self.destination = None
        self.duration = None
        self.activities = []
        self.notes = ""

    def ask_questions(self):
        print("Welcome to the Travel Inspiration Bot!")
        self.destination = input("Where would you like to go? ")
        self.duration = input("How long would you like to stay? ")
        while True:
            activity = input("What activities do you like to do when you travel? (type 'done' when finished) ")
            if activity.lower() == 'done':
                break
            self.activities.append(activity)
        self.notes = input("Is there anything else you'd like to note about your trip? ")

    def generate_itinerary(self):
        itinerary = f"**{self.destination} Itinerary**\n"
        itinerary += f"**Duration:** {self.duration}\n"
        itinerary += f"**Activities:**\n"
        for activity in self.activities:
            itinerary += f"- {activity}\n"
        itinerary += f"**Notes:**\n"
        itinerary += f"{self.notes}"
        return itinerary

    def print_itinerary(self):
        print(self.generate_itinerary())

    def export_itinerary(self):
        itinerary = self.generate_itinerary()
        with open("itinerary.txt", "w") as file:
            file.write(itinerary)
        print("Itinerary exported to itinerary.txt")

def main():
    bot = TravelBot()
    bot.ask_questions()
    bot.print_itinerary()
    bot.export_itinerary()

if __name__ == "__main__":
    main()
